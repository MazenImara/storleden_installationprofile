<div id="textslider">
    <div id="carousel-example-generic" class="carousel slide" data-ride="carousel">
  
        <!-- Indicators -->
        <ol class="left carousel-indicators">
        {% for i in nodesArray %}
            <li data-target="#carousel-example-generic" data-slide-to="{{ loop.index - 1}}" class="active"></li>
        {% endfor %}
        
        

        </ol>
          
        <!-- Wrapper for slides -->
        <div class="carousel-inner" >
            {% for node in nodesArray %}
            {% if loop.index == 1 %}
                <div class="item active" style="padding: 5px;">
                    <div class="inner">
                        {% if node.img %}
                            <div class="row">
                                <div class="col-sm-3"><img src="{{ node.img}}" width="100" height="100"></div>
                                <div class="col-sm-9">
                                    <div style="display: table; margin: 0 auto;">
                                        <h3><a href="node/{{ node.id}}">{{ node.title}}</a></h3>
                                    </div>
                                    <div class="item-text" >
                                        {% filter striptags %}{{ node.body|raw }}{% endfilter %} ...
                                    </div>                                    
                                </div>
                            </div>
                        {% else %}
                            <div style="display: table; margin: 0 auto;">
                                <h3><a href="node/{{ node.id}}">{{ node.title}}</a></h3>
                            </div>
                            <div class="item-text" style="text-align:center;">
                                {% filter striptags %}{{ node.body|raw }}{% endfilter %} ...
                            </div>
                        {% endif %}
                    </div>
                </div>
            {% else %}
                <div class="item" style="padding: 5px;">
                    <div class="inner">
                        {% if node.img %}
                            <div class="row">
                                <div class="col-sm-3"><img src="{{ node.img}}" width="100" height="100"></div>
                                <div class="col-sm-9">
                                    <div style="display: table; margin: 0 auto;">
                                        <h3><a href="node/{{ node.id}}">{{ node.title}}</a></h3>
                                    </div>
                                    <div class="item-text" >
                                        {% filter striptags %}{{ node.body|raw }}{% endfilter %} ...
                                    </div>                                    
                                </div>
                            </div>
                        {% else %}
                            <div style="display: table; margin: 0 auto;">
                                <h3><a href="node/{{ node.id}}">{{ node.title}}</a></h3>
                            </div>
                            <div class="item-text" style="text-align:center;">
                                {% filter striptags %}{{ node.body|raw }}{% endfilter %} ...
                            </div>
                        {% endif %}
                    </div>
                </div>
            {% endif %}
            {% endfor %}
        </div>
        
        <!-- Controls 
        <a class="left carousel-control" href="#carousel-example-generic" data-slide="prev">
            <span class="glyphicon glyphicon-chevron-left"></span>
        </a>
        
        <a class="right carousel-control" href="#carousel-example-generic" data-slide="next">
            <span class="glyphicon glyphicon-chevron-right"></span>
        </a>
        -->
    </div>
</div>














